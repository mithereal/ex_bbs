<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="vote_desc-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :vote_id %>
    <%= number_input f, :vote_id %>
    <%= error_tag f, :vote_id %>
  
    <%= label f, :topic_id %>
    <%= number_input f, :topic_id %>
    <%= error_tag f, :topic_id %>
  
    <%= label f, :vote_text %>
    <%= number_input f, :vote_text %>
    <%= error_tag f, :vote_text %>
  
    <%= label f, :vote_start %>
    <%= number_input f, :vote_start %>
    <%= error_tag f, :vote_start %>
  
    <%= label f, :vote_length %>
    <%= number_input f, :vote_length %>
    <%= error_tag f, :vote_length %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
